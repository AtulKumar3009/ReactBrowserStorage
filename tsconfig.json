{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "ESNext",
        "target": "ES6",
        "lib": [
            "ES6",
            "DOM"
        ],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": false,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__"
    ]
}